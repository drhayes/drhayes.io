{% extends './base.njk' %}

{% block content %}
{% include 'header.njk' %}
<main class='center stack h-entry'>

  {% include 'title-element.njk' %}

  {% include 'toc.njk' %}

  <article class="stack e-content">
    {{ content | safe }}
  </article>

  {% if posse | length %}
  {% aside "Syndicated Elsewhere" %}
    <ul>
    {% for thing in posse %}
      <li><a href="{{ thing }}" class="u-syndication">{{ thing }}</a></li>
    {% endfor %}
    </ul>
  {% endaside %}
  {% endif %}

  {% include 'webmentions.njk' %}

</main>

{% include 'footer.njk' %}
{% endblock %}
