---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
{%- set posts = collections.blogPost -%}
<?xml version="1.0" encoding="utf-8"?>
<feed xmnls="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <subtitle>{{ site.subtitle }}</subtitle>
  <link href="{{ site.host }}/feed.xml" rel="self" />
  <link href="{{ site.host }}" />
  <updated>{{ posts | rssLastUpdatedDate }}</updated>
  <id>{{ site.host }}</id>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>

  {% for post in posts %}
  {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(site.host) }}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}" />
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | truncateHtml }}</content>
  </entry>
  {% endfor %}
</feed>
