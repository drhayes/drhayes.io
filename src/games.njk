---
title: Games
eleventyExcludeFromCollections: true
---

<ul class="games-list">
  {% for game in collections.games %}
    <li class="game-item">
      <a href="{{ game.url }}">
        <figure class="game-screenshot">
        <img src="{{ game.data.screenshot }}" alt="{{ game.data.screenshotDescription }}">
          <figcaption>{{ game.data.title }}</figcaption>
        </figure>
      </a>
    </li>
  {% endfor %}
</ul>
