<header>
  {% include "tags.njk" %}

  <h1 class="p-name">
    {% if page.url %}
      <a href="{{ page.url }}" class="u-url">
    {% endif %}
      {{ title }}
    {% if page.url %}
      </a>
    {% endif %}
  </h1>

  {% if description %}
  <p class="summary p-summary">
    {{ description }}
  </p>
  {% endif %}

  <div class="times">
    {% if date | isValidIsoDate %}
      <time datetime="{{ date | dateFormat(true) }}" class="dt-published">{{ date | dateFormat }}</time>
    {%- endif -%}
    {%- if date | isValidIsoDate and updated | isValidIsoDate %}, {% endif -%}
    {%- if updated | isValidIsoDate -%}
      <time datetime="{{ updated | dateFormat(true) }}" class="dt-updated">updated: {{ updated | dateFormat }}</time>
    {% endif %}
  </div>
  {% if draft %}
  <aside class="draft">
    <h4>This is a draft</h4>
    <p>This one isn't fully baked yet!</p>
  </aside>
  {% endif %}

</header>
