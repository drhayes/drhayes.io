<header>
<h1>{{ title }}</h1>
<div class="times">
  {% if date %}
    <time datetime="{{ date | dateFormat(true) }}">{{ date | dateFormat }}</time>
  {% endif %}
  {% if updated %}
    <time datetime="{{ updated | dateFormat(true) }}">(Updated: {{ updated | dateFormat }})</time>
  {% endif %}
</div>
</header>
