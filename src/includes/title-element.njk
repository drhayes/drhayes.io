<header>
  <div class="times">
    {% if date %}
      <time datetime="{{ date | dateFormat(true) }}">{{ date | dateFormat }}</time>
    {% endif %}
    {% if updated %}
      <time datetime="{{ updated | dateFormat(true) }}">(Updated: {{ updated | dateFormat }})</time>
    {% endif %}
    {% if draft %}
      {% include "draft-badge.njk" %}
    {% endif %}
  </div>
  <h1>{{ title }}</h1>
  {% if tags %}
  <div class="tags-container">
    <ul class="tags">
      {% for tag in tags | tagFilter %}
        <li><a href="/tags/{{ tag | slugify }}" class="tag">{{ tag }}</a></li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</header>
