<h1 class="relative text-3xl font-bold pb-4 mb-4 dotted-border leading-relaxed md:text-4xl">
  {{ title }}
  {% if subtitle %}
  <small class="block text-xl font-normal">{{ subtitle }}</small>
  {% endif %}
  {% if author %}
    <span class="block text-xl font-normal mt-4">by <address class="inline not-italic author">{{ author }}</address><span>
  {% endif %}
</h1>
