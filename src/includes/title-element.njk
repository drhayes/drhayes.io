<header class="stack">

  <h1 class="p-name">
    {% if page.url %}
      <a href="{{ page.url }}" class="u-url">
    {% endif %}
      {{ title }}
    {% if page.url %}
      </a>
    {% endif %}
  </h1>

  <div class="post-metadata">
    <div>
      {% if date | isValidIsoDate %}
      <time datetime="{{ date | dateFormat(true) }}" class="dt-published">{{ date | dateFormat }}</time>{%- endif -%}
            {%- if updated | isValidIsoDate -%}
      <span>{%- if date | isValidIsoDate and updated | isValidIsoDate -%}, {% endif -%}
updated: <time datetime="{{ updated | dateFormat(true) }}" class="dt-updated">{{ updated | dateFormat }}</time></span>
      {% endif %}
    </div>
    {% include "tags.njk" %}
  </div>

  {% if description %}
  <p class="summary p-summary">
    {{ description }}
  </p>
  {% endif %}

  {% if draft %}
  <aside class="box stack draft">
    <h4>This is a draft</h4>
    <p>This one isn't fully baked yet!</p>
  </aside>
  {% endif %}

</header>
