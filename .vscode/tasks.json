{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "New Post",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "--kind",
        "post-bundle",
        "posts/${input:postFilename}"
      ],
      "presentation": {
        "reveal": "always"
      }
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "postFilename",
      "description": "What's the post filename?",
      "default": "my-new-post-title"
    }
  ]
}
