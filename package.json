    "date-fns": "3.3.1",
    "eleventy-plugin-embed-everything": "1.18.2",
    "eleventy-plugin-reading-time": "0.0.1",
    "eleventy-plugin-toc": "1.1.5",
    "eslint": "8.56.0",
